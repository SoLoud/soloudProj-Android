        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/tutorialImage1"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        />



</RelativeLayout>