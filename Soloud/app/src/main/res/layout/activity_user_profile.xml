<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.soloud.profile.UserProfileActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_background"
        >

        <FrameLayout
            android:id="@+id/userFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:id="@+id/background_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/b3818"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="170dp"

                app:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="4dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:text="Lorem Ipsum"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="Level 2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/progress_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/user_level"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="82/100"
                        android:textSize="14sp" />

                    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                        android:id="@+id/userProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@+id/progress_text1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        app:rcBackgroundColor="#bebebe"
                        app:rcBackgroundPadding="2dp"
                        app:rcMax="100"
                        app:rcProgress="75"
                        app:rcProgressColor="@color/colorPrimary"
                        app:rcRadius="10dp"
                        app:rcReverse="false" />

                    <TextView
                        android:id="@+id/progress_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userProgressBar"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Level up in 18 points"
                        android:textColor="@color/mySecondary"
                        android:textSize="14sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_IV"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="110dp"
                android:elevation="6dp"
                android:src="@drawable/bazo"
                app:civ_border_color="#FF000000"
                app:civ_border_width="4dp" />

        </FrameLayout>

