<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <ImageView
        android:id="@+id/tutorialImage"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/bazo"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΒΡΕΣ ΤΟ ΚΑΤΑΛΛΗΛΟ ΦΩΣ"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/tv2"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="17dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΓΙΑ ΕΠΑΓΓΕΛΑΤΙΚΟ ΑΠΟΤΕΛΕΣΜΑ"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/tv3"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:layout_marginLeft="17dp"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΣΤΙΣ ΛΗΨΕΙΣ ΣΟΥ"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"/>


</RelativeLayout>